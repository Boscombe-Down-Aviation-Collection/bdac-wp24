{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "defaultPalette": false,
            "palette": [
                {
                    "slug": "bdac24-red",
                    "color": "#d91f26",
                    "name": "BDAC Red"
                },
                {
                    "slug": "bdac24-blue",
                    "color": "#071f5b",
                    "name": "BDAC Blue"
                },
                {
                    "slug": "bdac24-blue-alt",
                    "color": "#dbe2f3",
                    "name": "BDAC Blue Alt"
                },
                {
                    "slug": "bdac24-yellow",
                    "color": "#fcba04",
                    "name": "BDAC Yellow"
                },
                {
                    "slug": "bdac24-white",
                    "color": "#f7f7ff",
                    "name": "BDAC White"
                },
                {
                    "slug": "bdac24-black",
                    "color": "#304048",
                    "name": "BDAC Black"
                },
                {
                    "slug": "white",
                    "color": "#ffffff",
                    "name": "White"
                },
                {
                    "slug": "black",
                    "color": "#000000",
                    "name": "Black"
                }
            ],
            "background": true,
            "text": true,
            "link": true,
            "custom": true,
            "duotone": [
                {
                    "slug": "dev-bdac-sunset",
                    "colors": [
                        "#071f5b",
                        "#d91f26"
                    ],
                    "name": "BDAC BDAC Sunset"
                }
            ],
            "defaultGradients": false,
            "gradients": [
                {
                    "slug": "dev-summer-dog",
                    "name": "BDAC Summer Dog",
                    "gradient": "linear-gradient(90deg, #d91f26, #071f5b)"
                }
            ]
        },
        "typography": {
            "customFontSize": false,
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "Oswald, sans-serif",
                    "slug": "bdac24-oswald",
                    "name": "Oswald"
                },
                {
                    "fontFamily": "Raleway, sans-serif",
                    "slug": "bdac24-raleway",
                    "name": "Raleway"
                }
            ],
            "fontSizes": [
                {
                    "slug": "small",
                    "size": "0.75rem",
                    "name": "Small",
                    "fluid": {
                        "min": "0.75rem",
                        "max": "0.75rem"
                    }
                },
                {
                    "slug": "medium",
                    "size": "1rem",
                    "name": "Small",
                    "fluid": {
                        "min": "1rem",
                        "max": "1rem"
                    }
                },
                {
                    "slug": "large",
                    "size": "1.5rem",
                    "name": "Small",
                    "fluid": {
                        "min": "1.25rem",
                        "max": "1.5rem"
                    }
                },
                {
                    "slug": "x-large",
                    "size": "2.25rem",
                    "name": "XL",
                    "fluid": {
                        "min": "2rem",
                        "max": "2.25rem"
                    }
                },
                {
                    "slug": "xx-large",
                    "size": "3rem",
                    "name": "2XL",
                    "fluid": {
                        "min": "2.5rem",
                        "max": "3rem"
                    }
                }
            ],
            "lineHeight": true,
            "dropCap": true,
            "fontWeight": true,
            "fontStyle": true,
            "textTransform": true,
            "textDecoration": true
        },
        "blocks": {
            "core/site-title": {
                "color": {
                    "defaultPalette": false,
                    "custom": false,
                    "gradients": [],
                    "customGradient": false
                }
            },
            "core/button": {
                "color": {
                    "defaultPalette": false,
                    "custom": false,
                    "gradients": [],
                    "customGradient": false
                },
                "typography": {
                    "fontFamilies": [
                        {
                            "fontFamily": "Oswald, sans-serif",
                            "slug": "bdac24-oswald",
                            "name": "Oswald"
                        }
                    ]
                }
            },
            "core/buttons": {
                "color": {
                    "defaultPalette": false,
                    "custom": false,
                    "gradients": [],
                    "customGradient": false
                },
                "typography": {
                    "fontFamilies": [
                        {
                            "fontFamily": "Oswald, sans-serif",
                            "slug": "bdac24-oswald",
                            "name": "bdac24 Oswald"
                        }
                    ]
                }
            },
            "core/cover": {
                "color": {
                    "duotone": []
                }
            },
            "core/preformatted": {
                "typography": {
                    "fontSizes": [],
                    "customFontSize": false
                }
            }
        },
        "layout": {
            "contentSize": "80rem",
            "wideSize": "90rem"
        },
        "spacing": {
            "margin": true,
            "padding": true,
            "units": [
                "px",
                "rem",
                "vh",
                "vw",
                "%"
            ],
            "blockGap": false
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--bdac-24-white)",
            "text": "var(--wp--preset--color--bdac-24-black)"
        },
        "blocks": {
            "core/group": {
                "spacing": {
                    "blockGap": "1rem"
                }
            },
            "core/button": {
                "color": {
                    "background": "var(--wp--preset--color--bdac-24-red)",
                    "text": "var(--wp--preset--color--bdac-24-white)"
                },
                "border": {
                    "color": "var(--wp--preset--color--bdac-24-red)",
                    "style": "solid",
                    "radius": "0.625rem",
                    "width": "0.125rem"
                }     
            },
            "core/site-title": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--bdac-24-oswald)"
                }
            }
        },
        "elements": {
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--bdac-24-red)"
                }
            },
            "h1": {
                "color": {
                    "text": "var(--wp--preset--color--bdac-24-blue)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--bdac-24-oswald)"
                }
            },
            "h2": {
                "color": {
                    "text": "var(--wp--preset--color--bdac-24-blue)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--bdac-24-oswald)"
                }
            },
            "h3": {
                "color": {
                    "text": "var(--wp--preset--color--bdac-24-blue)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--bdac-24-oswald)"
                }
            },
            "h4": {
                "color": {
                    "text": "var(--wp--preset--color--bdac-24-blue)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--bdac-24-oswald)"
                }
            },
            "h5": {
                "color": {
                    "text": "var(--wp--preset--color--bdac-24-blue)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--bdac-24-oswald)"
                }
            },
            "h6": {
                "color": {
                    "text": "var(--wp--preset--color--bdac-24-blue)"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--bdac-24-oswald)"
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--bdac-24-raleway)",
            "fontSize": "16px",
            "fontStyle": "normal",
            "fontWeight": "normal",
            "lineHeight": "inherit",
            "textDecoration": "none",
            "textTransform": "none"
        },
        "spacing": {
            "margin": {
                "top": "0px",
                "right": "0px",
                "bottom": "0px",
                "left": "0px"
            },
            "padding": {
                "top": "0px",
                "right": "0px",
                "bottom": "0px",
                "left": "0px"
            },
            "blockGap": "4rem"
        }
    },
    "customTemplates": [
        {
            "name": "full-width-page",
            "title": "Full Width Page",
            "postTypes": [
                "page"
            ]
        }
    ]
}
